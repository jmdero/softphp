<?php
namespace App\SoftPHP;
require_once __DIR__.'\SPSession\SPSession';
require_once __DIR__.'\SPRouter\SPRouter';
use App\SoftPHP\SPSession\SPSession as SPSession;
use App\SoftPHP\SPRouter\SPRouter as SPRouter;
/**
 * Main app class.
 * @version 0.0.0
 */
class SoftPHP{
    /** It manage all app routes*/
    protected SPRouter $router;
    /** It manage all app session*/
    protected SPSession $session;
    /**
     * Constructor.
     * @version 0.0.0
     */
    public function __construct(){
        $this->startSession();
    }
    /**
     * Execute the URL request.
     * @version 0.0.0
     */
    public function executeURL(){
        $this->router= new SPRouter();
    }
    /**
     * Session starter.
     * @version 0.0.0
     */
    protected function startSession(){
        $this->session= new SPSession();
        $this->session->start();
    }
}
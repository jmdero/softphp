<?php
namespace App\System;
require_once APP_PATH.'\System\Session\Session';
require_once APP_PATH.'\System\Router\Router';
use App\System\Session\Session as Session;
use App\System\Router\Router as Router;
/**
 * Main app class.
 * @version 0.0.0
 */
class SoftPHP{
    protected Router $router;
    protected Session $session;
    public function __construct(){$this->startSession();}
    public function executeURL(string $url=''){
        $url=($url==='')?$_SERVER['REQUEST_URI']:$url;
        $this->router= new Router();
    }
    protected function startSession(){
        $this->session= new Session();
        $this->session->start();
    }
}